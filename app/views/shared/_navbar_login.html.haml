= form_tag api_user_session_path, :class => "homepage-login-form form-inline" do
  = label_tag "Email"
  = text_field_tag 'user[email]'
  = label_tag "Password"
  = password_field_tag 'user[password]'
  = label_tag 'user[remember_me]', 'Remember me'
  = check_box_tag 'user[remember_me]'
  %button.btn.btn-primary Sign in
  = link_to "Forgot your password?", new_api_user_password_path('user')

