= form_tag api_user_session_path, :class => "homepage-login-form" do
  .row.form-row
    .col-md-3
      = label_tag "Email"
    .col-md-3
      = text_field_tag 'user[email]'
  .row.form-row
    .col-md-3
      = label_tag "Password"
    .col-md-3
      = password_field_tag 'user[password]'
  .row.form-row
    .col-md-3
    = label_tag 'user[remember_me]', 'Remember me'
    .col-md-2
      = check_box_tag 'user[remember_me]'
  .row.form-row
    .col-md-5
      %button.btn.btn-primary Sign in
  .row.form-row
    = link_to "Forgot your password?", api_new_password_path('user')

